//关键字：析构函数，构造函数，对象指针及引用



#include<iostream>
using namespace std;
//注意以上两条的vs2015以上标准开头

//一个计算矩形体积&周长的代码。
class CRectangle
{
public:
	CRectangle(); //默认参数构造函数
	CRectangle(int width, int height); //带参构造函数
	~CRectangle();
	double circum();
	double area();
private:
	int width;
	int height;

};

CRectangle::CRectangle()
{
	width = 10;
	height = 5;
	cout << "建立默认对象" << endl;

}

CRectangle::CRectangle(int width, int height)
{
	this->width = width;
	this->height = height;
	cout << "建立对象" << endl;
}

CRectangle::~CRectangle()
{
	cout << "撤销对象" << endl;
}

double CRectangle::circum()
{
	return 2 * (width + height);
}

double CRectangle::area()
{
	return width * height;
}

void main()
{
	CRectangle Rect2(30, 20);
	CRectangle *pR = &Rect2;
	int a;
	CRectangle *new01 = new CRectangle(1,2);
	cout << "rect2 long" << new01->circum() << endl; //注意：指针变量的引用  ->
	cin >> a ;
}
